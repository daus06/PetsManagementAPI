<style>
    /* Login Page Layout */
    .login-container {
        display: flex;
        min-height: calc(100vh - 200px);
        background-color: #fff;
    }

    /* Login Form Section */
    .login-form-section {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 4rem 2rem;
        background-color: #FFD1DF;
        animation: fadeInLeft 0.8s ease-in-out;
    }

    .login-form {
        max-width: 400px;
        width: 100%;
        text-align: center;
    }

        .login-form h2 {
            font-family: 'Pacifico', cursive;
            font-size: 2.3rem;
            color: #494848;
            margin-bottom: 1.2rem;
        }

    .form-group {
        margin-bottom: 1.3rem;
        text-align: left;
    }

    label {
        font-size: 1rem;
        font-weight: 600;
        color: #494848;
    }

    /* Input Fields */
    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 2px solid #494848;
        border-radius: 8px;
        font-size: 1rem;
        outline: none;
        transition: 0.3s ease;
    }

    input:focus {
        border-color: #000066;
        box-shadow: 0 0 8px rgba(0, 0, 160, 0.2);
    }

    /* Password Field with Toggle */
    .password-field {
        position: relative;
    }

        .password-field i {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #0000a0;
            cursor: pointer;
            transition: 0.3s ease;
        }

            .password-field i:hover {
                color: #000066;
            }

    /* Login Button */
    .login-btn-form {
        width: 100%;
        padding: 0.75rem;
        background-color: #494848;
        color: #FFD1DF;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: 0.3s ease;
    }

        .login-btn-form:hover {
            background-color: #000066;
            transform: translateY(-2px);
        }

    /* Login Links */
    .login-links {
        text-align: center;
        margin-top: 1rem;
    }

        .login-links a {
            color: #0000a0;
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.3s ease;
        }

            .login-links a:hover {
                color: #000066;
                text-decoration: underline;
            }

    /* Decorative Section */
    .login-decorative-section {
        flex: 1;
        background: url('/images/login.jpeg') no-repeat center center / cover;
        display: flex;
        justify-content: center;
        align-items: center;
        animation: fadeInRight 0.8s ease-in-out;
    }

    .decorative-content {
        text-align: center;
        color: white;
        max-width: 400px;
    }

        .decorative-content h3 {
            font-family: 'Pacifico', cursive;
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .decorative-content p {
            font-size: 1.1rem;
        }
</style>

<!-- Login Page -->
<div class="login-container">
    <!-- Left Side: Login Form -->
    <div class="login-form-section">
        <div class="login-form">
            <h2>Login to Home4Strays</h2>

            @if (ViewBag.Error != null)
            {
                <div style="color: red; margin-bottom: 1rem;">@ViewBag.Error</div>
            }

            <form method="post" asp-action="Login" asp-controller="Users">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" required>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <div class="password-field">
                        <input type="password" id="password" name="password" required>
                        <i class="bi bi-eye-slash" id="togglePassword"></i>
                    </div>
                </div>

                <button type="submit" class="login-btn-form">Login</button>
            </form>

            <div class="login-links">
                <p>Don't have an account? <a asp-controller="Users" asp-action="Signup">Register here</a></p>
            </div>
        </div>
    </div>

    <!-- Right Side: Decorative Section -->
    <div class="login-decorative-section">
        <div class="decorative-content">
            <h3>Welcome Back!</h3>
            <p>Log in to find your perfect furry companion and give a stray a loving home today!</p>
        </div>
    </div>
</div>

<!-- JavaScript for Show/Hide Password -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.getElementById('togglePassword').addEventListener('click', function () {
            const passwordInput = document.getElementById('password');
            const type = passwordInput.type === 'password' ? 'text' : 'password';
            passwordInput.type = type;
            this.classList.toggle('bi-eye');
            this.classList.toggle('bi-eye-slash');
        });

        document.addEventListener('DOMContentLoaded', function () {
        @if (TempData["Success"] != null)
        {
            <text>
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: '@TempData["Success"]',
                            confirmButtonColor: '#0000a0'
                        });
            </text>
        }
        });
    </script>
}
