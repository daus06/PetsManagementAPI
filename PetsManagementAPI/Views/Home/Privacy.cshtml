@{
    ViewData["Title"] = "Privacy Policy";
}

<!-- Include Animate.css for animations -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<!-- Custom Styles -->
<style>
    /* General Styling */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: url('/images/forest-bg.jpg') fixed center/cover;
        font-family: 'Arial', sans-serif;
    }

    /* Privacy Section */
    .privacy-section {
        padding: 5rem 1rem;
        min-height: calc(100vh - 150px);
        background: rgba(245, 245, 245, 0.95); /* Semi-transparent overlay */
    }

    .privacy-wrapper {
        max-width: 950px;
        margin: 0 auto;
        background: #fff;
        padding: 2.5rem;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }

    /* Header */
    .privacy-heading {
        font-family: 'Merriweather', serif;
        font-size: 3.2rem;
        text-align: center;
        color: #2d6a4f;
        margin-bottom: 1.5rem;
    }

    .privacy-intro {
        font-family: 'Open Sans', sans-serif;
        font-size: 1.15rem;
        line-height: 1.7;
        text-align: center;
        color: #5d6d6e;
        max-width: 700px;
        margin: 0 auto 2.5rem;
    }

    /* Accordion */
    .privacy-details .detail-item {
        border: 2px solid #2d6a4f;
        border-radius: 10px;
        margin-bottom: 1.2rem;
        background: #f9f9f9;
        transition: all 0.3s ease;
    }

        .privacy-details .detail-item:hover {
            box-shadow: 0 5px 15px rgba(45, 106, 79, 0.2);
        }

    .privacy-details .detail-button {
        background-color: #f0f7f2;
        color: #2d6a4f;
        font-family: 'Merriweather', serif;
        font-size: 1.35rem;
        padding: 1.3rem;
        border-radius: 8px;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: background-color 0.3s ease;
    }

        .privacy-details .detail-button:not(.collapsed) {
            background-color: #b7e4c7;
            color: #1b4332;
        }

        .privacy-details .detail-button:focus {
            outline: none;
            box-shadow: 0 0 5px rgba(45, 106, 79, 0.5);
        }

    .privacy-details .detail-content {
        padding: 1.5rem;
        font-family: 'Open Sans', sans-serif;
        font-size: 1rem;
        color: #5d6d6e;
        line-height: 1.6;
    }

    /* Contact Section */
    .privacy-contact {
        margin-top: 3rem;
        padding: 2rem;
        background: #b7e4c7;
        border-radius: 12px;
        text-align: center;
    }

        .privacy-contact h3 {
            font-family: 'Merriweather', serif;
            font-size: 2.2rem;
            color: #2d6a4f;
            margin-bottom: 1rem;
        }

        .privacy-contact p {
            font-size: 1.1rem;
            color: #1b4332;
            margin-bottom: 0.5rem;
        }

        .privacy-contact a {
            color: #2d6a4f;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

            .privacy-contact a:hover {
                color: #1b4332;
                text-decoration: underline;
            }
</style>

<!-- Privacy Policy Section -->
<section class="privacy-section">
    <div class="privacy-wrapper">
        <h1 class="privacy-heading animate__animated animate__fadeInDown">@ViewData["Title"]</h1>
        <p class="privacy-intro">
            At StraySafe, your privacy matters to us. Learn how we collect, use, and safeguard your information when you interact with our site.
        </p>

        <!-- Accordion -->
        <div class="privacy-details accordion" id="privacyDetails">
            <!-- Section 1: Information We Collect -->
            <div class="detail-item animate__animated animate__fadeInUp" style="animation-delay: 0.1s;">
                <h2 class="detail-header" id="detailOne">
                    <button class="detail-button" type="button" data-bs-toggle="collapse" data-bs-target="#contentOne">
                        What We Collect
                    </button>
                </h2>
                <div id="contentOne" class="accordion-collapse collapse show">
                    <div class="detail-content">
                        <ul>
                            <li><strong>Personal Data:</strong> Name, email, phone number, address.</li>
                            <li><strong>Adoption Info:</strong> Preferences for pet adoption.</li>
                            <li><strong>Site Usage:</strong> IP address, browser details, visited pages.</li>
                            <li><strong>Cookies:</strong> Enhance functionality and user experience.</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Section 2: How We Use Your Information -->
            <div class="detail-item animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
                <h2 class="detail-header" id="detailTwo">
                    <button class="detail-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#contentTwo">
                        How We Use It
                    </button>
                </h2>
                <div id="contentTwo" class="accordion-collapse collapse">
                    <div class="detail-content">
                        <ul>
                            <li>Match you with pets for adoption.</li>
                            <li>Send updates, event info, and newsletters.</li>
                            <li>Improve our website based on usage trends.</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Section 3: Security Measures -->
            <div class="detail-item animate__animated animate__fadeInUp" style="animation-delay: 0.3s;">
                <h2 class="detail-header" id="detailThree">
                    <button class="detail-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#contentThree">
                        Data Protection
                    </button>
                </h2>
                <div id="contentThree" class="accordion-collapse collapse">
                    <div class="detail-content">
                        <ul>
                            <li>Encrypted storage on secure servers.</li>
                            <li>Access restricted to authorized staff.</li>
                            <li>Ongoing security enhancements.</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Section 4: Data Sharing -->
            <div class="detail-item animate__animated animate__fadeInUp" style="animation-delay: 0.4s;">
                <h2 class="detail-header" id="detailFour">
                    <button class="detail-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#contentFour">
                        Who We Share With
                    </button>
                </h2>
                <div id="contentFour" class="accordion-collapse collapse">
                    <div class="detail-content">
                        <ul>
                            <li>We <strong>never sell</strong> your data.</li>
                            <li>Shared only with adoption partners or as required by law.</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Section 5: Your Rights -->
            <div class="detail-item animate__animated animate__fadeInUp" style="animation-delay: 0.5s;">
                <h2 class="detail-header" id="detailFive">
                    <button class="detail-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#contentFive">
                        Your Rights
                    </button>
                </h2>
                <div id="contentFive" class="accordion-collapse collapse">
                    <div class="detail-content">
                        <ul>
                            <li>View, edit, or delete your information.</li>
                            <li>Unsubscribe from promotional emails.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="privacy-contact animate__animated animate__fadeInUp" style="animation-delay: 0.6s;">
            <h3>Get in Touch</h3>
            <p>Email: <a href="mailto:info@straysafe.org">info@straysafe.org</a></p>
            <p>Phone: <a href="tel:+60198765432">+60198765432</a></p>
        </div>
    </div>
</section>