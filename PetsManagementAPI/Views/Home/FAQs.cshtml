@{
    ViewData["Title"] = "FAQs";
}

<!-- Include Animate.css for animations -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<!-- Custom Styles -->
<style>
    /* General Styling */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background-color: #f9f7f3;
        font-family: 'Arial', sans-serif;
    }

    /* Hero Section */
    .faq-hero {
        position: relative;
        height: 60vh;
        background: url('/images/FAQsbg.jpeg') no-repeat center center;
        background-size: cover;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(47, 54, 64, 0.6);
    }

    .hero-content {
        position: relative;
        z-index: 1;
        color: #fff;
    }

        .hero-content h1 {
            font-family: 'Lora', serif;
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .hero-content p {
            font-size: 1.3rem;
            max-width: 650px;
            margin: 0 auto;
        }

    /* FAQ Section */
    .faq-section {
        padding: 5rem 2rem;
        background-color: #fff;
    }

    .faq-container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .faq-section h2 {
        font-family: 'Lora', serif;
        font-size: 2.7rem;
        color: #d35400;
        text-align: center;
        margin-bottom: 2.5rem;
    }

    /* Search Bar */
    .faq-search {
        margin-bottom: 2.5rem;
        text-align: center;
    }

        .faq-search input {
            width: 100%;
            max-width: 450px;
            padding: 0.8rem 1.5rem;
            border: 2px solid #d35400;
            border-radius: 30px;
            font-size: 1rem;
            outline: none;
            transition: all 0.3s ease;
        }

            .faq-search input:focus {
                border-color: #e67e22;
                box-shadow: 0 0 8px rgba(230, 126, 34, 0.3);
            }

    /* FAQ Accordion */
    .faq-entry {
        background-color: #fdfaf6;
        border-radius: 8px;
        margin-bottom: 1.2rem;
        overflow: hidden;
        opacity: 0;
        transition: all 0.3s ease;
    }

        .faq-entry.visible {
            opacity: 1;
            animation: fadeUp 0.5s ease-in-out forwards;
        }

        .faq-entry:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    .faq-q {
        padding: 1.5rem;
        font-size: 1.25rem;
        color: #d35400;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .faq-q:hover {
            background-color: #fef5e7;
        }

        .faq-q i {
            transition: transform 0.3s ease;
        }

        .faq-q.active i {
            transform: rotate(180deg);
        }

    .faq-a {
        padding: 0 1.5rem;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease, padding 0.3s ease;
        color: #7f8c8d;
        font-size: 1rem;
        line-height: 1.7;
    }

        .faq-a.active {
            padding: 1.5rem;
            max-height: 250px; /* Adjusted for content */
        }

    /* CTA Section */
    .cta-section {
        padding: 5rem 2rem;
        background-color: #fef5e7;
        text-align: center;
    }

        .cta-section h2 {
            font-family: 'Lora', serif;
            font-size: 2.7rem;
            color: #d35400;
            margin-bottom: 1rem;
        }

        .cta-section p {
            font-size: 1.15rem;
            color: #7f8c8d;
            max-width: 650px;
            margin: 0 auto 2rem;
        }

    .cta-btn {
        background-color: #e67e22;
        color: #fff;
        padding: 0.8rem 2.5rem;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .cta-btn:hover {
            background-color: #d35400;
            transform: scale(1.05);
        }
</style>

<!-- Hero Section -->
<section class="faq-hero">
    <div class="hero-overlay"></div>
    <div class="hero-content animate__animated animate__fadeIn">
        <h1>Your Questions Answered</h1>
        <p>Curious about adopting or supporting StraySafe? Find all the answers you need here!</p>
    </div>
</section>

<!-- FAQ Section -->
<section class="faq-section">
    <div class="faq-container">
        <h2 class="animate__animated animate__fadeInDown">FAQs</h2>
        <!-- Search Bar -->
        <div class="faq-search">
            <input type="text" id="faqSearch" placeholder="Search our FAQs..." onkeyup="filterFAQs()">
        </div>
        <!-- FAQ Entries -->
        <div class="faq-list">
            <div class="faq-entry">
                <div class="faq-q">
                    How do I adopt a pet from StraySafe?
                    <i class="bi bi-chevron-down"></i>
                </div>
                <div class="faq-a">
                    Visit our "Adopt" page, browse our available pets, and submit an adoption form. Our team will reach out to guide you through the next steps!
                </div>
            </div>
            <div class="faq-entry">
                <div class="faq-q">
                    What’s the adoption fee?
                    <i class="bi bi-chevron-down"></i>
                </div>
                <div class="faq-a">
                    Fees range from $50 to $150, depending on the pet. This covers vaccinations, spaying/neutering, and initial care costs.
                </div>
            </div>
            <div class="faq-entry">
                <div class="faq-q">
                    Can I foster before adopting?
                    <i class="bi bi-chevron-down"></i>
                </div>
                <div class="faq-a">
                    Absolutely! Our foster-to-adopt program lets you try fostering first. Get in touch to start the process.
                </div>
            </div>
            <div class="faq-entry">
                <div class="faq-q">
                    What do I need to prepare for a new pet?
                    <i class="bi bi-chevron-down"></i>
                </div>
                <div class="faq-a">
                    Set up a cozy space with food, water, a bed, and toys. Pet-proof your home and grab essentials like a leash or litter box.
                </div>
            </div>
            <div class="faq-entry">
                <div class="faq-q">
                    How can I volunteer with StraySafe?
                    <i class="bi bi-chevron-down"></i>
                </div>
                <div class="faq-a">
                    We’d love your help! Check our "Get Involved" page or contact us directly for volunteer opportunities.
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <h2 class="animate__animated animate__fadeInDown">Still Have Questions?</h2>
        <p>Reach out to us for more information or personalized assistance!</p>
        <a href="#" class="cta-btn animate__animated animate__pulse animate__infinite">Contact Us</a>
    </div>
</section>

<!-- JavaScript for Functionality -->
<script>
    // Accordion Toggle
    document.querySelectorAll('.faq-q').forEach(item => {
        item.addEventListener('click', () => {
            const answer = item.nextElementSibling;
            const icon = item.querySelector('i');
            const isActive = answer.classList.contains('active');

            document.querySelectorAll('.faq-a').forEach(ans => ans.classList.remove('active'));
            document.querySelectorAll('.faq-q i').forEach(i => i.classList.remove('active'));

            if (!isActive) {
                answer.classList.add('active');
                icon.classList.add('active');
            }
        });
    });

    // Search Filter
    function filterFAQs() {
        const searchTerm = document.getElementById('faqSearch').value.toLowerCase();
        const faqEntries = document.querySelectorAll('.faq-entry');

        faqEntries.forEach(entry => {
            const question = entry.querySelector('.faq-q').textContent.toLowerCase();
            const answer = entry.querySelector('.faq-a').textContent.toLowerCase();

            entry.style.display = (question.includes(searchTerm) || answer.includes(searchTerm)) ? 'block' : 'none';
        });
    }

    // Scroll Reveal
    const faqEntries = document.querySelectorAll('.faq-entry');
    const revealFAQs = () => {
        const windowHeight = window.innerHeight;
        faqEntries.forEach(entry => {
            const entryTop = entry.getBoundingClientRect().top;
            if (entryTop < windowHeight - 120) {
                entry.classList.add('visible');
            }
        });
    };

    window.addEventListener('scroll', revealFAQs);
    window.addEventListener('load', revealFAQs);
</script>