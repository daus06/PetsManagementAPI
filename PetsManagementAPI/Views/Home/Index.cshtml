@{
    ViewData["Title"] = "Home";
}

<!-- Custom styles for the home page -->
<style>
    /* Hero Section */
    .hero-section {
        background: url('/images/homebg.jpg') no-repeat center center;
        background-size: cover;
        padding: 4rem 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        /* Dark overlay (doesn't block clicks) */
        .hero-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.3);
            z-index: 1;
            pointer-events: none; /* Fixes the button being unclickable */
        }

        /* Ensure text is above the overlay */
        .hero-section h1,
        .hero-section p {
            position: relative;
            z-index: 2;
            color: white; /* Makes sure the text stands out */
        }

        .hero-section h1 {
            font-family: 'Pacifico', cursive;
            font-size: 3.5rem;
            margin-bottom: 1rem;
            animation: fadeInDown 1s ease-in-out;
            color: #ffffff;
        }

        .hero-section p {
            font-size: 1.25rem;
            max-width: 600px;
            margin: 0 auto 2rem;
            color: #f1f1f1;
        }

    /* Button Styling */
    .hero-btn {
        background-color: #fff0e6;
        border: 2px solid #0000a0;
        border-radius: 25px;
        padding: 0.75rem 2rem;
        color: #0000a0;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 3px 3px 0 #0000a0;
        position: relative; /* Ensures it's above the overlay */
        z-index: 2; /* Fixes button click issue */
    }

        .hero-btn:hover {
            background-color: #e6e6ff;
            transform: translateY(-3px);
            box-shadow: 5px 5px 0 #0000a0;
            color: #000066;
        }

    /* Pet Showcase */
    .pet-showcase {
        padding: 4rem 2rem;
        background-color: #fff;
    }

    .pet-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,160,0.1);
        transition: transform 0.3s ease;
        margin-bottom: 2rem;
    }

        .pet-card:hover {
            transform: translateY(-10px);
        }

        .pet-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

    .pet-card-body {
        padding: 1.5rem;
        text-align: center;
    }

        .pet-card-body h5 {
            color: #0000a0;
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }

        .pet-card-body p {
            color: #666;
            margin-bottom: 1rem;
        }

    .btn-adopt {
        background-color: #0000a0;
        color: #fff;
        border-radius: 20px;
        padding: 0.5rem 1.5rem;
        transition: all 0.3s ease;
    }

        .btn-adopt:hover {
            background-color: #000066;
            color: #fff;
            transform: scale(1.05);
        }

    /* Partner Shelters Section */
    .partner-section {
        padding: 4rem 2rem;
        background-color: #f5ece3;
    }

        .partner-section h2 {
            font-family: 'Pacifico', cursive;
            color: #0000a0;
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .partner-section .description {
            max-width: 800px;
            margin: 0 auto 3rem;
            text-align: center;
            color: #0000a0;
            font-size: 1.1rem;
            line-height: 1.6;
        }

    .partner-card {
        background-color: #fff;
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 4px 15px rgba(0,0,160,0.1);
        text-align: center;
        transition: transform 0.3s ease;
        margin-bottom: 2rem;
    }

        .partner-card:hover {
            transform: translateY(-10px);
        }
</style>

