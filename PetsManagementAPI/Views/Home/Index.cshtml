@{
    ViewData["Title"] = "Home";
}

<!-- Include Bootstrap & Animate.css Library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Custom Styles -->
<style>
    /* General Reset */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Hero Section (Carousel) */
    .hero-carousel {
        position: relative;
        height: 80vh;
    }

    .carousel-item img {
        width: 100%;
        height: 80vh;
        object-fit: cover;
        filter: saturate(1.2) contrast(1.1);
    }

    .carousel-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6));
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        color: #fff;
        text-align: center;
    }

        .carousel-overlay h1 {
            font-family: 'Montserrat', sans-serif;
            font-size: 4rem;
            font-weight: 700;
            text-transform: capitalize;
            letter-spacing: 1px;
        }

        .carousel-overlay p {
            font-size: 1.5rem;
            margin: 1rem 0;
        }

    .action-btn {
        background-color: #ff6f61;
        color: #fff;
        padding: 0.8rem 2.5rem;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.4s ease;
    }

        .action-btn:hover {
            background-color: #ff4d3d;
            transform: scale(1.1);
        }

    /* Pet Showcase Section */
    .pet-gallery {
        padding: 5rem 0;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }

        .pet-gallery h2 {
            font-family: 'Roboto', sans-serif;
            font-size: 2.8rem;
            color: #2c3e50;
            text-align: center;
            margin-bottom: 3rem;
        }

    .pet-item {
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

        .pet-item:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

        .pet-item img {
            width: 100%;
            height: 220px;
            object-fit: cover;
        }

    .pet-info {
        padding: 1.5rem;
        text-align: center;
    }

        .pet-info h5 {
            font-size: 1.4rem;
            color: #2c3e50;
        }

        .pet-info p {
            color: #7f8c8d;
            font-size: 1rem;
        }

    /* Partner Shelters Section */
    .partners {
        padding: 5rem 0;
        background-color: #fff;
    }

        .partners h2 {
            font-family: 'Lobster', cursive;
            font-size: 3rem;
            color: #ff6f61;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .partners .intro-text {
            text-align: center;
            color: #34495e;
            font-size: 1.2rem;
            max-width: 900px;
            margin: 0 auto 3rem;
            line-height: 1.8;
        }

    .partner-box {
        background: #ecf0f1;
        border-radius: 12px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
    }

        .partner-box:hover {
            background: #dfe6e9;
            transform: scale(1.03);
        }

        .partner-box img {
            max-width: 120px;
            height: auto;
            margin-bottom: 1rem;
        }

        .partner-box h5 {
            font-size: 1.5rem;
            color: #2c3e50;
        }

        .partner-box p {
            color: #7f8c8d;
            font-size: 1rem;
        }

        .partner-box .contact {
            color: #ff6f61;
            font-weight: bold;
        }
</style>

<!-- Hero Section (Carousel) -->
<div id="heroCarousel" class="carousel slide hero-carousel" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/Bacground2.jpeg" alt="Pet Adoption">
            <div class="carousel-overlay animate__animated animate__fadeIn">
                <h1>Welcome a Furry Friend</h1>
                <p>Bring joy home by adopting a pet today!</p>
                <a asp-controller="Pets" asp-action="FindPet" class="action-btn">Start Adopting</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/homebg.jpg" alt="Dog Adoption">
            <div class="carousel-overlay animate__animated animate__fadeIn">
                <h1>Love Awaits You</h1>
                <p>Discover pets ready to join your family.</p>
                <a asp-controller="Pets" asp-action="FindPet" class="action-btn">Find a Pet</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/Background3.jpeg" alt="Cat Adoption">
            <div class="carousel-overlay animate__animated animate__fadeIn">
                <h1>Adopt, Don’t Shop</h1>
                <p>Give a loving home to a pet in need.</p>
                <a asp-controller="Pets" asp-action="FindPet" class="action-btn">Meet Them</a>
            </div>
        </div>
    </div>
</div>

<!-- Pet Showcase Section -->
<section class="pet-gallery">
    <div class="container">
        <h2 class="animate__animated animate__bounceIn">Featured Pets</h2>
        <div class="row">
            <div class="col-md-4 animate__animated animate__fadeInLeft">
                <div class="pet-item">
                    <img src="~/images/German Shepherd.jpeg" alt="German Shepherd">
                    <div class="pet-info">
                        <h5>German Shepherd</h5>
                        <p>Energetic dog, loves outdoor fun</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 animate__animated animate__fadeInUp">
                <div class="pet-item">
                    <img src="~/images/Persian.jpeg" alt="Persian">
                    <div class="pet-info">
                        <h5>Persian</h5>
                        <p>Calm cat, perfect for cuddles</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 animate__animated animate__fadeInRight">
                <div class="pet-item">
                    <img src="~/images/Bulldog.jpeg" alt="Bulldog">
                    <div class="pet-info">
                        <h5>Bulldog</h5>
                        <p>Loyal dog, full of charm</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Partner Shelters Section -->
<section class="partners">
    <div class="container">
        <h2 class="animate__animated animate__pulse">Our Shelter Partners</h2>
        <p class="intro-text">
            Our partners are the unsung heroes who dedicate their lives to rescuing and rehoming animals. From small foster homes to large sanctuaries, they work tirelessly to give every pet a second chance. We’re proud to collaborate with these amazing organizations!
        </p>
        <div class="row">
            <div class="col-md-4 animate__animated animate__zoomIn">
                <div class="partner-box">
                    <img src="~/images/MeeFah.jpg" alt="MeeFah Shelter">
                    <h5>MeeFah Homeless Animals Shelter</h5>
                    <p>1858, Kg Rincing Hulu, Semenyih, Selangor</p>
                    <p class="contact">+60123312680</p>
                </div>
            </div>
            <div class="col-md-4 animate__animated animate__zoomIn" style="animation-delay: 0.2s;">
                <div class="partner-box">
                    <img src="~/images/PusatHaiwan.jpg" alt="QQ Shelter">
                    <h5>Pusat Haiwan QQ Shelter</h5>
                    <p>D1316A Jalan Batang Berjuntai, Batu Arang, Selangor</p>
                    <p class="contact">+60189888845</p>
                </div>
            </div>
            <div class="col-md-4 animate__animated animate__zoomIn" style="animation-delay: 0.4s;">
                <div class="partner-box">
                    <img src="~/images/Paws.jpg" alt="Paws Society">
                    <h5>Paws Animal Welfare Society</h5>
                    <p>Lot 93316-93317, Jalan PJU 1A/20, Ara Damansara, Petaling Jaya, Selangor</p>
                    <p class="contact">+60172847500</p>
                </div>
            </div>
        </div>
    </div>
</section>