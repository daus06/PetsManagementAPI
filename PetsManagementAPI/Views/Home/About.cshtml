@{
    ViewData["Title"] = "About Us";
}

<!-- Custom styles for the About Us page -->
<style>
    /* Ensure the page has enough space for the footer */
    body {
        margin: 0;
        padding-bottom: 60px; /* Adjust this value based on your footer's height */
    }

    /* About Us Hero Section */
    .about-hero {
        background: url('/images/aboutbg.jpg') no-repeat center center;
        background-size: cover;
        padding: 4rem 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        /* Dark overlay to make the background darker */
        .about-hero::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.3); /* Adjust value for darkness */
            z-index: 1;
            pointer-events: none; /* Ensures elements remain clickable */
        }

        /* Ensure text is above the overlay */
        .about-hero h1,
        .about-hero p {
            position: relative;
            z-index: 2;
            color: white; /* Makes sure the text stands out */
        }

        /* Title Styling */
        .about-hero h1 {
            font-family: 'Pacifico', cursive;
            font-size: 3.5rem;
            margin-bottom: 1rem;
            animation: fadeInDown 1s ease-in-out;
        }

        /* Paragraph Styling */
        .about-hero p {
            font-size: 1.25rem;
            max-width: 600px;
            margin: 0 auto 2rem;
            color: #f1f1f1;
        }


    /* About Us General Section Styling */
    .about-section {
        padding: 4rem 2rem;
        background-color: #fff;
        text-align: center;
    }

        .about-section h2 {
            font-family: 'Pacifico', cursive;
            color: #0000a0;
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .about-section p {
            color: #666;
            font-size: 1.1rem;
            max-width: 800px;
            margin: 0 auto 2rem;
            line-height: 1.6;
        }

    /* About Us Container */
    .about-container {
        max-width: 960px;
        margin: 0 auto;
    }

    /* About Us Team Section */
    .about-team-section {
        padding: 4rem 2rem;
        background-color: #f5ece3;
    }

    .about-team-card {
        background-color: #fff;
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 4px 15px rgba(0,0,160,0.1);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin-bottom: 2rem;
    }

        .about-team-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 6px 20px rgba(0,0,160,0.2);
        }

        .about-team-card img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 1rem;
        }

        .about-team-card h5 {
            color: #0000a0;
            font-size: 1.3rem;
            margin-bottom: 0.5rem;
        }

        .about-team-card p {
            color: #666;
            font-size: 0.95rem;
        }

    /* About Us Adoption Stories (Photo Collage) Section */
    .about-adoption-stories-section {
        padding: 4rem 2rem;
        margin-bottom: 60px; /* Ensure space for the footer */
        background-color: #e6e6ff;
        position: relative;
    }

        .about-adoption-stories-section h2 {
            font-family: 'Pacifico', cursive;
            color: #0000a0;
            font-size: 2.5rem;
            text-align: center;
            margin-bottom: 1rem;
        }

        .about-adoption-stories-section p {
            color: #0000a0;
            font-size: 1.1rem;
            max-width: 800px;
            margin: 0 auto 3rem;
            text-align: center;
            line-height: 1.6;
        }

    .about-photo-collage {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .about-collage-item {
        position: relative;
        overflow: hidden;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,160,0.1);
        transition: transform 0.3s ease, opacity 0.5s ease;
        opacity: 0; /* Start hidden for animation */
    }

        .about-collage-item img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            display: block;
        }

        .about-collage-item:hover {
            transform: scale(1.05);
        }

        /* Reveal animation for collage items */
        .about-collage-item.about-reveal {
            opacity: 1;
            animation: about-fadeInUp 0.5s ease-in-out forwards;
        }
</style>

<!-- About Us Hero Section -->
<section class="about-hero">
    <h1>About Home4Strays</h1>
    <p>We are a passionate team dedicated to rescuing, rehabilitating, and rehoming stray animals, ensuring they find loving forever homes.</p>
</section>

<!-- Mission Section -->
<section class="about-section">
    <div class="about-container">
        <h2>Our Mission</h2>
        <p>
            At Home4Strays, our mission is to end pet homelessness by providing shelter, care, and love to stray animals. We work tirelessly to rescue animals in need, rehabilitate them with the help of our dedicated team and partners, and find them loving families. Every animal deserves a second chance, and we’re here to make that happen—one adoption at a time.
        </p>
    </div>
</section>

