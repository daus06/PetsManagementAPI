<!-- JavaScript for Scroll Animation -->
<script>
    // Function to reveal collage items on scroll
    const aboutCollageItems = document.querySelectorAll('.about-collage-item');

    const aboutRevealOnScroll = () => {
        const windowHeight = window.innerHeight;
        aboutCollageItems.forEach(item => {
            const itemTop = item.getBoundingClientRect().top;
            if (itemTop < windowHeight - 100) {
                item.classList.add('about-reveal');
            }
        });
    };

    // Trigger the function on scroll and on page load
    window.addEventListener('scroll', aboutRevealOnScroll);
    window.addEventListener('load', aboutRevealOnScroll);
</script>